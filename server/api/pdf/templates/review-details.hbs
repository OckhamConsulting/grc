
<blockquote>
  <h3 class="text-info">Review {{item.reviewId}}</h3> </blockquote>
<div class="ibox">
  <div class="ibox-content">
    <div class="row m-b-md">
      <div class="col-xs-12">
        <h4>{{item.title}}</h4> </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <dl class="dl-horizontal"> 
          <dt>Status</dt>
          <dd>{{item.status}}</dd> 
          <dt>Org. Unit:</dt>
          <dd>{{item.responsibleOrg.orgName}}</dd> 
        </dl>
      </div>
      <div class="col-xs-6">
        <dl class="dl-horizontal">
          <dt>Owner:</dt>
          <dd>{{item.scheduledBy.display_name}}</dd> 
          <dt>Version:</dt>
          <dd>{{item.version}}</dd> 
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <dl class="dl-horizontal">
          <dt>Description: </dt>
          <dd>{{{item.description}}}</dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h4 class="text-info">Associated Records</h4> </div>
  <div class="ibox-content">
  	{{#if item.recordsForReview}} 
     <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
      	{{#each item.recordsForReview}}
	        <tr class="linked-row">
	          <td class="text-nowrap"><a href="{{site_url}}/governance-record/{{recordId}}" target="_blank">{{recordId}}</a></td>
	          <td>{{title}}</td>
	          <td>{{category}}</td>
	        </tr>
      	{{/each}}
      </tbody>
    </table>
    {{^}}
    <p class="empty-list">No records for review<p>
    {{/if}}
  </div>
</div>

