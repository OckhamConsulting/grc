
<blockquote >
    <h3 class="text-primary">Action Items</h3>
</blockquote>

<h4> Organisation Unit : {{orgUnit.orgName}}</h4>

<table class="table table-bordered table-striped">
    <thead> 
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
      <th>Prioirty</th>
      <th>Due Date</th>
      <th>Created By</th>
      <th>Assigned To</th>
    </thead> 
    <tbody> 
        {{#items}} 
        <tr> 
            <td class="text-nowrap"><a href="{{site_url}}/action-item/{{_source.id}}" target="_blank">{{_source.id}}</a></td> 
            <td>{{_source.title}}</td> 
            <td>{{_source.status}}</td> 
            <td>{{_source.priority}}</td> 
            <td>{{formatDate _source.dueDate 'short'}}</td> 
            <td>{{_source.responsibleUserName}}</td> 
            <td>{{_source.assignedToUserName}}</td>
        </tr> 
        {{/items}} 
    </tbody> 
</table> 