
<blockquote >
    <h3 class="text-primary">Controls</h3>
</blockquote>

<h4> Organisation Unit : {{orgUnit.orgName}}</h4>

<table class="table table-bordered table-striped">
    <thead> 
        <th>ID</th>
        <th>Title</th>
        <th>Category</th>
        <th>Status</th>
        <th>Effective from</th>
        <th>Effective to</th>
        <th>Resp. Org</th>
        <th>Resp. User</th>
        <th>Last update</th>
    </thead> 
    <tbody> 
        {{#items}} 
        <tr>
            <td class="text-nowrap"><a href="{{site_url}}/control/{{_source.id}}" target="_blank">{{_source.id}}</a></td> 
            <td>{{_source.title}}</td> 
            <td>{{_source.category}}</td> 
            <td>{{_source.status}}</td> 
            <td>{{formatDate _source.effectivefrom 'short'}}</td>
            <td>{{formatDate _source.effectiveto 'short'}}</td>
            <td>{{_source.orgUnitName}}</td> 
            <td>{{_source.responsibleUserName}}</td> 
            <td>{{formatDate _source.updatedAt 'short'}}</td>
        </tr> 
        {{/items}} 
    </tbody> 
</table> 